<%# <h1>Owner::Bookings#index</h1>
<p>Find me in app/views/owner/bookings/index.html.erb</p> %>
<div class="container">
  <div class="row p-3">
    <% @bookings.each do |booking| %>
      <div class="col-sm-6 col-lg-4 booking-item border border-2 rounded-3">
        <h2><%= booking.spot.name %> scheduled on <%= booking.booking_date %></h2>
        <h2>Booking status: <%= booking.status %></h2>
        <h2>Viewer: <%= booking.user.name %></h2>
      </div>
    <% end %>
  </div>
</div>
