<div class="container m-3">
  <div class="row">
    <div class="col-6">
      <h1><%= link_to @booking.spot.name, spot_path(@booking.spot), class: "text-dark text-decoration-none" %></h1>
      <i class="fa-solid fa-location-dot" style="color: #e67e23;"></i>
      <%= @booking.spot.address %>
      <hr>
      <i class="fa-regular fa-calendar" style="color: #e67e23;"></i>
      <span> <%= @booking.booking_date %></span>
      <i class="fa-solid fa-clock" style="color: #e67e23;"></i>
      <%= @booking.status.capitalize %>
      <h3 class="mt-3">Overview</h3>
      <p><%= @booking.spot.description %></p>
      <div class="d-flex">
        <p>Listed By <%= @booking.spot.user.name %></p>
        <%= image_tag "user-default.jpg", class: "avatar", alt: "Anonymous user avatar" %>
      </div>
      <p>
        <i class="fa-solid fa-money-bill" style="color: #e67e23;"></i>
        <strong><%= @booking.spot.daily_rate %></strong> / Day
      </p>
    </div>
    <div>
      <%= link_to "Edit", "#", class: "btn btn-warning" %>
      <%= link_to "Cancel", "#", class: "btn btn-warning" %>
    </div>
  </div>
</div>
